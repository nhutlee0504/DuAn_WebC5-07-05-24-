@model DA_WebC5.Models.Account

@if (Model != null)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        Hồ sơ của tôi<br />
                        Quản lý thông tin hồ sơ để bảo mật tài khoản
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <label for="username" class="col-sm-4 text-right">Tên đăng nhập:</label>
                            <div class="col-sm-8">
                                <span id="username">@Model.UserName</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="col-sm-4 text-right">Tên:</label>
                            <div class="col-sm-8">
                                <span id="name">@Model.Name</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="phone" class="col-sm-4 text-right">Số Điện Thoại:</label>
                            <div class="col-sm-8">
                                <span id="phone">@Model.Phone</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="col-sm-4 text-right">Email:</label>
                            <div class="col-sm-8">
                                <span id="email">@Model.Email</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="gender" class="col-sm-4 text-right">Giới tính:</label>
                            <div class="col-sm-8">
                                <span id="gender">@Model.Gender</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="address" class="col-sm-4 text-right">Địa chỉ:</label>
                            <div class="col-sm-8">
                                <span id="address">@Model.Address</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Không tìm thấy thông tin người dùng.</p>
}
