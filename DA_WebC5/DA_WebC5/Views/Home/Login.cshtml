<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="form-container">
                <h2 class="text-center mb-4">Login</h2>
                <form>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" style="border-radius: 10px" id="email" placeholder="example@example.com">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" style="border-radius: 10px" id="password" placeholder="">
                    </div>
                    <button type="submit" class="btn btn-dark btn-block " style="border-radius: 20px">Continue</button>
                    <div class="text-center mt-3">
                        <div class="position-relative">
                            <span class="position-absolute bg-white px-3" style="left: 50%; top: -10px; transform: translateX(-50%);">OR</span>
                        </div>
                        <hr class="w-100">
                    </div>
                    <div class="text-center">New user? <a class="text text-primary">Create an account</a></div>
                </form>
            </div>
        </div>
    </div>
