<script>
    function updateQuantity(id, action) {
        $.ajax({
            url: `/Cart/${action}`,
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    $('#quantity-' + id).val(response.quantity);
                    $('#failQuantity').hide();
                } else {
                    $('#failQuantity').text(response.message).show();
                }
            },
            error: function () {
                window.location.href = '/cart/index';
            }
        });
    }
</script>
