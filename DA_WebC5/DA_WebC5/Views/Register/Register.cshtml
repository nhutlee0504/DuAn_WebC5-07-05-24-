<link href="https://cdnjs.cloudflare.com/ajax/libs/intro.js/7.2.0/introjs.min.css" rel="stylesheet">
<div class="container">
    <div class="row justify-content-center" style="margin-top:50px">
        <div class="col-md-4">
            <div class="text-center mb-5">
                <h3>Đăng ký tài khoản</h3>
            </div>
            <form>
                <div class="mb-3">
                    <label for="username" class="form-label font-weight-bolder">Tên tài khoản</label>
                    <input data-intro="Điền tên tài khoản vào đây" data-step="1" type="text" class="form-control" id="username" placeholder="Tên tài khoản" required>
                    <small id="usernameHelp" class="form-text text-muted">Ví dụ: JohnDoe123</small>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label font-weight-bolder">Mật khẩu</label>
                    <input data-intro="Điền mật khẩu" data-step="2" type="password" class="form-control" id="password" placeholder="Mật khẩu" required>
                    <small id="passwordHelp" class="form-text text-muted">Mật khẩu ít nhất 8 ký tự, bao gồm ít nhất một chữ cái và một chữ số.</small>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label font-weight-bolder">Nhập lại mật khẩu</label>
                    <input data-intro="Điền đúng mật khẩu" data-step="3" type="password" class="form-control" id="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                    <small id="confirmPasswordHelp" class="form-text text-muted">Xác nhận lại mật khẩu để đảm bảo chính xác.</small>
                </div>
                <a asp-action="NextRegister" asp-controller="Register" data-intro="Xác nhận" class="btn btn-dark btn-block rounded-pill">Bước tiếp theo</a>
            </form>

            <div class="row d-flex justify-content-center mt-3 ">
                <a>Hoặc</a> 
            </div>
            <div class="row d-flex justify-content-center mt-3 mb-3">
                <a>Bạn đã có tài khoản? </a> <a href=""> Đăng nhập</a>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intro.js/7.2.0/intro.min.js"></script>
