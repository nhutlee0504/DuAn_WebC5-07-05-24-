@{
    ViewData["Title"] = "Sản phẩm";
}
@model IEnumerable<DA_WebC5.Models.NewViewModel.ProductViewModel>
<style>
    .bg-text {
        background-color: white;
    }

    .col-sm-3 .border {
        transition: box-shadow 0.3s, transform 0.3s;
    }

    .col-sm-3 .container-fluid {
        transition: box-shadow 0.3s, transform 0.3s;
    }

    .col-sm-3:hover .border {
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        transform: translateY(-5px);
    }

    .col-sm-3:hover .container-fluid {
        transform: translateY(-5px);
    }
</style>

<div class="container">
    <div class="row mt-3">
        <div class="col-sm-3">
            <h5>Loại</h5>
            <form method="post" asp-action="FilterByCategories" id="filterByCate">
                @foreach (var category in Model.SelectMany(m => m.Categories).Distinct())
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="selectedCategories" value="@category.IDCategory" id="@category.IDCategory">
                        <label class="form-check-label" for="@category.IDCategory">
                            @category.Name
                        </label>
                    </div>
                }
                <button type="submit" class="btn btn-dark mt-2">Lọc</button>
            </form>

            <hr class="mt-3 mb-3" />
            <h5>Phạm vi giá</h5>
            <form action="/Product/FilterByPrice" method="post">
                <div class="row container">
                    <div class="col-sm-6"><input type="number" placeholder="Thấp" class="w-100" name="priceLow" id="priceLow" value="@ViewBag.PriceLow" /></div>
                    <div class="col-sm-6"><input type="number" placeholder="Cao" class="w-100" name="priceHigh" id="priceHigh" value="@ViewBag.PriceHigh" /></div>
                </div>
                <div class="row container mt-2">
                    <button type="submit" class="btn btn-dark">Lọc</button>
                </div>
            </form>
            <hr class="mt-3 mb-3" />

            <h5>Thứ tự sắp xếp</h5>
            <form method="post" asp-action="SortOrder" id="sortOrderForm">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="sortOrder" id="priceLowToHigh" value="priceLowToHigh">
                    <label class="form-check-label" for="priceLowToHigh">
                        Giá từ thấp - cao
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="sortOrder" id="priceHighToLow" value="priceHighToLow">
                    <label class="form-check-label" for="priceHighToLow">
                        Giá từ cao - thấp
                    </label>
                </div>
            </form>
        </div>

        <div class="col-sm-9">
            @if (ViewBag.NotProducts != null)
            {
            <h5 class="font-weight-bold">@ViewBag.NotProducts</h5>
            }
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-3 d-flex justify-content-center flex-column">
                        <div class="border border-secondary-subtle rounded">
                            <a href="/ProductDetail/Index/@item.IDProduct"> <div><img src="~/Image_Product/@item.Image" alt="Alternate Text" class="mw-100" /></div></a>
                        </div>
                        <div class="row container-fluid">
                            <p class="font-weight-bold col-sm-8 mb-1">@item.Name</p>
                            <p class="font-weight-bold col-sm-4 mb-1">@item.Price.ToString("N0")</p>
                            <p style="font-size: small;" class="col-sm-8">@item.CategoryName</p>
                            <strike style="font-size: small;" class="col-sm-4">400.000</strike>
                        </div>
                        <p><i class="bi bi-star-fill text-warning"></i> 4.9 (100)</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('input[name="sortOrder"]').forEach(radio => {
        radio.addEventListener('change', function () {
            document.getElementById('sortOrderForm').submit();
        });
    });
</script>