@model IEnumerable<DA_WebC5.Models.Sizes>

@{
    ViewData["Title"] = "Index";
}
<style>
 a{
     text-decoration: none;
     color:white
 }
</style>
<h1>Danh sách kích cỡ</h1>

    <button type="button" class="btn btn-sm btn-gradient-danger btn-icon-text">
        <i class="mdi mdi-upload btn-icon-prepend"></i>     <a asp-controller="Size" asp-action="CreateSize" asp-area="Admin">Thêm kích cỡ sản phẩm </a>
    </button>
<div class="col-lg-12 text-center grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Tên kích cỡ</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SizeName)
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-gradient-dark btn-icon-text">

                                    <a asp-area="Admin" asp-controller="Size" asp-action="UpdateSize" asp-route-id="@item.IDSize">Cập nhật</a>  <i class="mdi mdi-file-check btn-icon-append"></i>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

