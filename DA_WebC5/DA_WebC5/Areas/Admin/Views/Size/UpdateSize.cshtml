@model DA_WebC5.Models.Sizes

@{
    ViewData["Title"] = "UpdateSize";
}

<h1>Cập nhật kích cỡ</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Size" asp-action="UpdateSize">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDSize" />
            <div class="form-group">
                <label asp-for="SizeName" class="control-label">Tên kích cỡ</label>
                <input asp-for="SizeName" class="form-control" />
                <span asp-validation-for="SizeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Admin" asp-controller="Size" asp-action="Index">Quay về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
