@model DA_WebC5.Models.Product

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Cập nhật sản phẩm</h4>
                <p class="card-description">Cập nhật thông tin sản phẩm</p>
                <form asp-action="UpdateProduct" asp-area="Admin" asp-controller="Products" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="productId" name="IDProduct" value="@Model.IDProduct"  asp-for="IDProduct" />
                    <div class="form-group">
                        <label for="Name">Tên sản phẩm</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Tên sản phẩm">
                    </div>
                    <div class="form-group">
                        <label for="Price">Giá</label>
                        <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" placeholder="Giá sản phẩm">
                    </div>
                    <div class="form-group">
                        <label for="Category">Loại sản phẩm</label>
                       <select class="form-select" id="Category" name="IDCategory" asp-for="Category.Name">
@*                         <option value="">Chọn loại sản phẩm</option> *@
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.IDCategory">
                                @category.Name
                            </option>
                        }
                    </select>

                    </div>

                    <div class="form-group">
                        <label for="Supplier">Nhà cung cấp</label>
                        <select class="form-select" id="Supplier" name="IDSupplier" asp-for="Supplier.Name">
                          
                            @foreach (var supplier in ViewBag.Suppliers)
                            {
                                <option value="@supplier.IDSupplier">@supplier.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="Image">Hình ảnh</label>
                        <input type="file" class="form-control-file" id="Image" name="Image" asp-for="Image" value="@Model.Image">
                        <img src="@Url.Content("~/" + Model.Image)"  alt="Product Image" width="100" height="100"/>
                    </div>

                    <div class="form-group">
                        <label for="Status">Trạng thái</label>
                        <select class="form-select" id="Status" name="Status">
                            <option value="Bán">Bán</option>
                            <option value="Tạm khóa">Tạm khóa</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="Describe">Mô tả</label>
                        <textarea class="form-control" id="Describe" name="Describe" rows="4">@Model.Describe</textarea>
                    </div>

                    <button type="submit" class="btn btn-gradient-primary me-2">Cập nhật sản phẩm</button>
                    <button type="button" class="btn btn-light">Hủy</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
