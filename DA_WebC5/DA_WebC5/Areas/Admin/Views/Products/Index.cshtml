@model IEnumerable<DA_WebC5.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách sản phẩm</h1>
<div class="row">
    <div class="col-md-3">
        <a asp-action="Create" asp-controller="Products" asp-area="Admin" type="button" class="btn btn-gradient-primary btn-rounded btn-fw">Thêm sản phẩm</a>
    </div>
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên</th>
                <th>Loại</th>
                <th>Giá</th>
                <th>Mô tả</th>
                <th>Nhà cung ứng</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.Image" />
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @* @item.Category.Name *@
                    </td>
                    <td>
                        @item.Price.ToString("N0") đồng
                    </td>
                    <td>
                        @item.Describe
                    </td>
                    <td>
                        @* @item.Supplier.Name *@
                    </td>
                    <td>
                        @{
                            if (item.Status.Equals("1"))
                            {
                                <label class="badge badge-success">Đang bán</label>
                            }
                            else if (item.Status.Equals("2"))
                            {
                                <label class="badge badge-danger">Tạm khóa</label>
                            }
                            else
                            {
                                <label class="badge badge-info">Hết</label>
                            }
                        }
                    </td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-secondary dropdown-toggle btn-sm" data-bs-toggle="dropdown">Hành động</button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item">Sửa</a>
                                <a class="dropdown-item">Xóa</a>
                                <a class="dropdown-item">Chi tiết</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
