    @model IEnumerable<DA_WebC5.Models.NewViewModel.ProductViewModel>

    @{
        ViewData["Title"] = "Index";
    }
    <style>
    .table-responsive {
        overflow-x: auto;
    }
    </style>
    <h1>Danh sách sản phẩm</h1>
    <div class="row">
        <div class="col-md-3">
            <a asp-action="Create" asp-controller="Products" asp-area="Admin" type="button" class="btn btn-sm btn-gradient-primary btn-rounded btn-fw">Thêm sản phẩm</a>
        </div>
       
    </div>
    <div class="row">
        <div class="table-responesive">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>Ảnh</th>
                    <th>Tên</th>
                    <th>Loại</th>
                    <th>Giá</th>
                    <th>Nhà cung ứng</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/@item.Image" alt="@item.Name" style="max-width: 100px; max-height: 100px;" />
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.CategoryName
                        </td>
                        <td>
                            @item.Price.ToString("N0") đồng
                        </td>
                        <td>
                            @item.NameSuplier
                        </td>
                        <td>
                            @{
                                if (item.Status.Equals("Bán"))
                                {
                                    <label class="badge badge-success">Đang bán</label>
                                }
                                else if (item.Status.Equals("Tạm khóa"))
                                {
                                    <label class="badge badge-danger">Tạm khóa</label>
                                }
                                else
                                {
                                    <label class="badge badge-info">Hết</label>
                                }
                            }
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-secondary dropdown-toggle btn-sm" data-bs-toggle="dropdown">Hành động</button>
                                <div class="dropdown-menu">
                                    <a asp-controller="Products" asp-area="Admin" asp-action="Details" asp-route-id="@item.IDProduct" class="dropdown-item">Chi tiết</a>

                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
     
    </div>
