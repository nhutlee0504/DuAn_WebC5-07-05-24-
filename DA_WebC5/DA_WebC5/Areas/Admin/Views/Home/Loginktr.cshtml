@model DA_WebC5.Models.Account
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div class="brand-logo">
                            <img src="~/IMG/logo.png">
                        </div>
                        <h4>Chào mừng đến quản trị</h4>
                        <h2 class="text-center mb-4">Đăng nhập</h2>
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="text-danger mt-2 text-center ">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        <div class="text-danger mt-2 text-center ">
                            @ViewBag.error
                        </div>

                        <form asp-area="Admin" asp-controller="Home" asp-action="Loginktr" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label for="UserName">Tên tài khoản</label>
                                <input asp-for=UserName type="text" class="form-control" style="border-radius: 10px" id="UserName" placeholder="Nhập tên tài khoản">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="password">Mật khẩu</label>
                                <input asp-for=Password type="password" class="form-control" style="border-radius: 10px" id="password" placeholder="Nhập mật khẩu">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mt-3 d-grid gap-2">
                                <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Đăng nhập</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}