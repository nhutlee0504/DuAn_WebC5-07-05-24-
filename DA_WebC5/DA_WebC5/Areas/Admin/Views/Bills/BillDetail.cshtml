@model DA_WebC5.Models.NewViewModel.BillInfor

<div class="container">
    <h4 class="mt-4">Chi tiết hóa đơn</h4>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-primary">
                <tr>
                    <th>ID Sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Màu sắc</th>
                    <th>Kích thước</th>
                    <th>Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BillDetails)
                {
                    <tr>
                        <td>
                            @Model.ProductDetails.FirstOrDefault(x => x.IDPDetail == item.IDBDetail).IDPDetail
                        </td>
                        <td>
                            <img src="~/@Model.Products.FirstOrDefault(x => x.IDProduct == Model.ProductDetails.FirstOrDefault(x => x.IDPDetail == item.IDBDetail).IDProduct).Image" alt="Alternate Text" />
                        </td>
                        <td>
                            @Model.Products.FirstOrDefault(x => x.IDProduct == Model.ProductDetails.FirstOrDefault(x => x.IDPDetail == item.IDBDetail).IDProduct).Name
                        </td>
                        <td>
                            @Model.Colors.FirstOrDefault(x => x.IDColor == Model.ProductDetails.FirstOrDefault(x => x.IDPDetail == item.IDBDetail).IDColor).Color
                        </td>
                        <td>
                            @Model.Sizes.FirstOrDefault(x => x.IDSize == Model.ProductDetails.FirstOrDefault(x => x.IDPDetail == item.IDBDetail).Size).SizeName
                        </td>
                        <td>@item.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

