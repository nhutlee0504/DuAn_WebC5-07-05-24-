@model IEnumerable<DA_WebC5.Models.Bill>

@{
	ViewData["Title"] = "Bill";
}

<h1>BillAll</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.IDBill)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UserName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TotalAmount)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OrderDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.IDBill)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UserName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TotalAmount)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OrderDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					<form asp-area="Admin" asp-controller="Bills" asp-action="UpdateBillStatus2" asp-route-id="@item.IDBill" method="post">
						<input type="hidden" name="id" value="@item.IDBill" />
						<input type="hidden" name="status" value="Đang giao" />
						@if (item.Status.ToString() == "Đang chờ")
						{
							<button type="submit" class="btn btn-success">Xác nhận đơn hàng</button>
						}
					</form>
					<form asp-area="Admin" asp-controller="Bills" asp-action="UpdateBillStatus2" asp-route-id="@item.IDBill" method="post">
						<input type="hidden" name="id" value="@item.IDBill" />
						<input type="hidden" name="status" value="Đã hủy" />
						@if (item.Status.ToString() == "Đang chờ")
						{
							<button type="submit" class="btn btn-success">Hủy đơn hàng</button>
						}
					</form>
				</td>
				<td>
					<a asp-area="Admin" asp-controller="Bills" asp-action="BillDetail" asp-route-id="@item.IDBill">Chi tiết</a>
				</td>
			</tr>
		}
	</tbody>
</table>
