@model IEnumerable<DA_WebC5.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-area="Admin" asp-controller="Suplier">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="UpdateSuplier" asp-area="Admin" asp-controller="Suplier" asp-route-id="@item.IDSupplier">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDSupplier">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDSupplier">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
